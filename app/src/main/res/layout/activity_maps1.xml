<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-27dp" />

    <Button
        android:id="@+id/zonas_btn"
        android:layout_width="110dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="601dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/logozonasamarillas"
        android:onClick="buscarZonas"
        android:padding="8dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/banos_btn"
        android:layout_width="110dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="601dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/banos"
        android:onClick="buscarBanos"
        android:padding="8dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/resta_btn"
        android:layout_width="140dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="601dp"
        android:layout_marginEnd="-32dp"
        android:layout_marginBottom="56dp"
        android:layout_toStartOf="@+id/zonas_btn"
        android:layout_toEndOf="@+id/banos_btn"
        android:background="@drawable/restaurantes"
        android:onClick="buscarRestaurantes"
        android:padding="8dp"
        android:textColor="#ffffff" />

</RelativeLayout>